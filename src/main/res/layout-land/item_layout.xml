<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="6dp" >

    <TextView
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:textColor="#ff00abed"
            android:textSize="20dp"
            android:text="Empty database"
            android:layout_toStartOf="@+id/profImage"
            android:layout_toLeftOf="@+id/profImage"/>

    <TextView
            android:id="@+id/id"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/name"
            android:ellipsize="marquee"
            android:lines="3"
            android:marqueeRepeatLimit="marquee_forever"
            android:textColor="#ff00abed"
            android:textSize="15dp"
            android:text="empty database"
            android:layout_toLeftOf="@+id/profImage"
            android:layout_toStartOf="@+id/profImage" android:layout_alignBottom="@+id/profImage"/>

    <ImageView
            android:id="@+id/profImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_alignParentTop="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

</RelativeLayout>

